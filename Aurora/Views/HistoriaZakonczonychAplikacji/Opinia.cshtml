@model Aurora.Models.Opinia

@{
    ViewData["Title"] = "Opinia";
}

<h1>Dodaj opinie na temat rekrutacji</h1>


<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Opinia">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="KandydatID" />
            <input type="hidden" asp-for="TuraRekrutacjiID" />
            <div class="form-group">
                <textarea asp-for="Tresc" class="form-control" rows="14" style="resize: none;"></textarea>
                <span asp-validation-for="Tresc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Wyślij" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="Index">Powrót</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
